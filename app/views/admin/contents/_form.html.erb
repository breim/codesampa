<%= bootstrap_form_for([:admin, @content]) do |f| %>
<div class="field">
  <%= f.text_field :title %>
</div>

<div class="field">
  <%= f.text_field :youtube_url %>
</div>

<div class="field">
  <%= f.collection_select :concept_id, Concept.all, :id, :name, prompt: true, required: true %>
</div>

<%= f.radio_button :icon, "<i class='fa fa-play'></i>", checked: true, label: "<i class='fa fa-play'></i>".html_safe %>
<%= f.radio_button :icon, "<i class='fa fa-file-text-o'></i>", label: "<i class='fa fa-file-text-o'></i>".html_safe %>

<div class="field">
  <%= f.text_field :fiat %>
</div>

<div class="form-group">
  <%= f.text_area :content, rows: 5, class: 'form-control' %>
</div>

<div class="actions">
  <%= f.submit class: 'btn btn-primary' %>
</div>
<% end %>
