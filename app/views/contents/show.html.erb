<div class="container">

  <h2 class="content-title">
    <%= @content.title %>
  </h2>

  <% if @content.youtube_url.present? %>
  <iframe src="//www.youtube.com/embed/<%= @content.youtube_url.partition("?v=").last.partition("&").first %>?bust=<%= Time.now %>" frameborder="0" style="overflow:hidden;width:100%" height="480"  class="player" width="800" allowfullscreen></iframe>
  <% end %>

  <div class="content-text">
    <%= (@content.content).html_safe %>
  </div>

</div>